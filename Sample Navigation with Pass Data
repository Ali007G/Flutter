main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  const MyApp({Key? key}) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: HomeActivity(),
    );
  }
}
class HomeActivity extends StatelessWidget {
  const HomeActivity({Key? key}) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Home'),
      ),
      body: Column(
        mainAxisAlignment: MainAxisAlignment.start,
        children: [
          Center(
            child: Container(
              height: 100,
              width: 100,
              color: Colors.black54,
            ),
          ),
          SizedBox(height: 30,),
          ElevatedButton(onPressed: () {
            Navigator.push(context, MaterialPageRoute(builder: (context)=>HomeActivityOne()));
          }, child: Text('Go Activity TO One')),
          SizedBox(
            height: 20,
          ),
          ElevatedButton(onPressed: () {
            Navigator.push(context, MaterialPageRoute(builder: (context)=>HomeActivityTwo()));
          }, child: Text('Go Activity TO Two')),

        ],
      ),
    );
  }
}
class HomeActivityOne extends StatelessWidget {
  const HomeActivityOne({Key? key}) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Home Activity One Page'),
      ),
      body: Center(
        child: ElevatedButton(onPressed: (){
          Navigator.push(context, MaterialPageRoute(builder: (context)=>HomeActivityTwo()));
        },child: Text('Go To Home Activity 2'))
      ),
    );
  }
}
class HomeActivityTwo extends StatelessWidget {
  const HomeActivityTwo({Key? key}) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Home Activity Two Page'),
      ),
      body: Center(
        child: ElevatedButton(onPressed: (){
      Navigator.push(context, MaterialPageRoute(builder: (context)=>HomeActivityOne()));
    },child: Text('Go To Home Activity 1'))
    ),
    );
  }
}
